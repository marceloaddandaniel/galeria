<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.FullScreen.Dark">
        <item name="android:windowBackground">@color/black_80</item>
    </style>
    <style name="ImageListItemStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ImageListItemInfo">
        <item name="android:maxHeight">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@color/black_80</item>
    </style>

    <style name="ImageListItemInfoText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_80</item>
    </style>

</resources>
